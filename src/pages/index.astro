---
import BootSequence from '../components/BootSequence.astro';
import Terminal from '../components/Terminal.astro';
import SEO from '../components/SEO.astro';
import Performance from '../components/Performance.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<SEO />
		<Performance />
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<main id="terminal" role="main" aria-label="Interactive Terminal Portfolio">
			<h1 class="sr-only">Zain - Full Stack Developer Portfolio</h1>
			<p class="sr-only">
				Welcome to my interactive terminal portfolio. I'm a full-stack developer 
				specializing in React, Node.js, TypeScript, and modern web technologies. 
				Use the terminal commands to explore my projects, skills, and experience.
			</p>
			<BootSequence />
			<Terminal />
		</main>

		<style>
			@import '../styles/variables.css';
			@import '../styles/base.css';
			@import '../styles/animations.css';
			@import '../styles/components.css';
		</style>


	</body>
</html>
